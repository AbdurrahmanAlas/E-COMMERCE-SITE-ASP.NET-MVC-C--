@using Tıcaret2020.Identity
@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> KULLANICI LİSTESİ</h3>


                    <br />
                    <br />



                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Kullanıcı Adı</th>
                                

                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.UserName</td>
                                




                                    <td><a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id })"> <div class="col-md-3 col-sm-4"><i class="fa fa-fw fa-edit"></i> <span class="text-muted"></span></div>   Sipariş Detay       </a>



                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Kullanıcı Adı</th>
                              

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

