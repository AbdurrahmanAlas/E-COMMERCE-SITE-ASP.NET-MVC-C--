@model Tıcaret2020.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>

        <div class="well well-small"><a href="#"><img src="/siteticaret/assets/img/paypal.jpg" alt="payment method paypal"></a></div>

        <a class="shopBtn btn-block" href="#"> İndirim Fırsatlarını kaçırmayın<br><small>Click to view</small></a>
        <br>
        <br>
        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">AnaSayfa</a> <span class="divider">/</span></li>
            <li class="active">Şifre Değiştirme</li>
        </ul>

        <hr class="soft" />
        <div class="well">

            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {



                <h3>Şifrenizi değiştirebilirsiniz...</h3>
                @Html.AntiForgeryToken()




                <div class="control-group">
                    <label class="control-label" for="inputFname">Eski şifre </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>




                <div class="control-group">
                    <label class="control-label" for="inputFname">Yeni şifre </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label" for="inputFname">Şifre Tekrar </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.ConNewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>






                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Şifre Değiştir" class="exclusive shopBtn">
                    </div>
                </div>

            }
        </div>



    </div>
</div>

