@using Tıcaret2020.Entity
@model IEnumerable<Order>
@{
    ViewBag.Title = "TamamlananSiparisler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> TAMAMLANAN SİPARİŞ LİSTESİ</h3>


                    <br />
                    <br />



                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat ₺</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.OrderNumber</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.OrderState</td>
                                    <td>@item.Total</td>




                                    <td><a class="btn btn-primary" href="@Url.Action("Details", new { id = item.Id })"> <div class="col-md-3 col-sm-4"><i class="fa fa-fw fa-edit"></i> <span class="text-muted"></span></div>   Sipariş Detay       </a>



                                </tr>

                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat ₺</th>

                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

