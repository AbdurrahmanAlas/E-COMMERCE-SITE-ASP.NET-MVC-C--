@using Tıcaret2020.Entity
@model IEnumerable<Product>

<div class="row-fluid">
    <div id="newProductCar" class="carousel slide">
        <div class="carousel-inner">
            <div class="item active">
                <ul class="thumbnails">
                 
                    

                    @foreach (var item in Model)
                    {



                        <li class="span3">
                            <div class="thumbnail">
                                <a  class="zoomTool" href="/Home/ProductDetails/@item.Id" title="add to cart"><span class="icon-search"></span>İNDİRİMLİ</a>
                                <a href="#" class="tag"></a>
                                <a href="/Home/ProductDetails/@item.Id"><img src="~/Content/t/@item.Image" alt="bootstrap-ring"></a>
                            </div>
                        </li>
                    }

                </ul>
            </div>
            <div class="item">
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {


                        <li class="span3">
                            <div class="thumbnail">
                                <a class="zoomTool" href="/Home/ProductDetails/@item.Id" title="add to cart"><span class="icon-search"></span> İNDİRİMLİ </a>
                                <a href="product_details.html"><img src="~/Content/t/@item.Image" alt=""></a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <a class="left carousel-control" href="#newProductCar" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#newProductCar" data-slide="next">&rsaquo;</a>
    </div>
</div>