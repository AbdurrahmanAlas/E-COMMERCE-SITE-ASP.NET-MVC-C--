@using Tıcaret2020.Entity
@model IEnumerable<Product>
<h3>POPÜLER ÜRÜNLER</h3>


<ul class="nav nav-list promowrapper">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">
               
                <img src="~/Content/t/@item.Image" alt="bootstrap ecommerce templates">
                <div class="caption">
                    <h3 style="color:red"><span>@item.Price ₺</span></h3>
                    <h4><a class="btn btn-success" href="/Home/ProductDetails/@item.Id" title="add to cart" style="font-family:Tahoma;color:white">➔  İncele </a></h4>
                </div>
            </div>
        </li>
        <li style="border:0"> &nbsp;</li>
    }




</ul>